<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Title:<%= data.title %></h5>
    </div>
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">
        Trạng thái : <%= data.status ? 'đã đọc' : "chưa đọc" %>
      </h6>
      <h6 class="card-subtitle mb-2 text-muted" style="display: inline-block">
        Nội dung:
      </h6>
      <p class="card-text" style="display: inline-block"><%= data.content %></p>
      <p class="card-text">
        Thời gian: <time id="currentTime"><%= data.created_at %></time>
      </p>
    </div>
  </div>
  <a class="btn btn-warning mt-3 w-100" href="/">BACK</a>
</div>
